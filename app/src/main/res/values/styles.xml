<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Toolbar -->
    <style name="BaseToolbarStyle">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:theme">@style/BaseToolbarTheme</item>
        <item name="titleTextAppearance">@style/CustomTitleTextAppearance</item>
    </style>

    <style name="BaseToolbarTheme">
        <item name="android:textColorPrimary">@color/toolbarTextPrimary</item>
        <item name="android:textColorSecondary">@color/toolbarTextSecondary</item>
    </style>

    <style name="CustomTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/toolbarTextPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Button -->
    <style name="Button.Primary" parent="Base.Widget.AppCompat.Button">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonSign" parent="Button.Primary">
        <item name="android:background">@drawable/sign_button</item>
    </style>

    <style name="ButtonSignText" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- EditText -->
    <style name="EditTextSign" parent="AppTheme">
        <item name="boxBackgroundColor">@color/backgroundSignEditText</item>
        <item name="hintTextColor">@color/hintSignEditText</item>
        <item name="boxStrokeColor">@color/hintSignEditText</item>
        <item name="startIconTint">@color/hintSignEditText</item>
        <item name="endIconTint">@color/hintSignEditText</item>
    </style>

    <style name="EditTextDropdown" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/backgroundSignCard</item>
        <item name="hintTextColor">@color/hintSignEditText</item>
        <item name="boxStrokeColor">@color/hintSignEditText</item>
        <item name="startIconTint">@color/hintSignEditText</item>
        <item name="endIconTint">@color/hintSignEditText</item>
    </style>

    <!-- TextView -->
    <style name="TextHeadRegister" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/head_register_size</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="fontFamily">@font/happy_monkey</item>
    </style>

    <!-- DatePicker -->
    <style name="birthdayRegisterDatePicker" parent="@android:style/Widget.Material.DatePicker">
        <item name="colorControlNormal">@color/hintSignEditText</item>
        <item name="android:textSize">@dimen/birthday_register_date_picker_text_size</item>
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
    </style>

</resources>