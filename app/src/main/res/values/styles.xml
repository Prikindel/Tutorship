<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Fragment -->
    <style name="RegisterFragmentContainer">
        <item name="android:background">@color/backgroundSign</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!-- Toolbar -->
    <style name="BaseToolbarStyle">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:theme">@style/BaseToolbarTheme</item>
        <item name="titleTextAppearance">@style/CustomTitleTextAppearance</item>
    </style>

    <style name="BaseToolbarTheme">
        <item name="android:textColorPrimary">@color/toolbarTextPrimary</item>
        <item name="android:textColorSecondary">@color/toolbarTextSecondary</item>
    </style>

    <style name="CustomTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/toolbarTextPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Button -->
    <style name="Button.Primary" parent="Base.Widget.AppCompat.Button">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonSign" parent="Button.Primary">
        <item name="android:background">@drawable/sign_button</item>
    </style>

    <style name="ButtonSignText" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- EditText -->
    <style name="EditTextSign" parent="AppTheme">
        <item name="boxBackgroundColor">@color/backgroundSignEditText</item>
        <item name="hintTextColor">@color/hintSignEditText</item>
        <item name="boxStrokeColor">@color/hintSignEditText</item>
        <item name="startIconTint">@color/hintSignEditText</item>
        <item name="endIconTint">@color/hintSignEditText</item>
        <item name="android:ems">10</item>
    </style>

    <style name="EditTextDropdown" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/backgroundSignCard</item>
        <item name="hintTextColor">@color/hintSignEditText</item>
        <item name="boxStrokeColor">@color/hintSignEditText</item>
        <item name="startIconTint">@color/hintSignEditText</item>
        <item name="endIconTint">@color/hintSignEditText</item>
    </style>

    <style name="EditTextBirthday" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:inputType">number</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">1</item>
        <item name="maxLines">1</item>
    </style>

    <style name="ThemeEditTextBirthday" parent="AppTheme">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/backgroundSignCard</item>
        <item name="android:textCursorDrawable">@color/backgroundSignCard</item>
    </style>

    <style name="ThemeEditTextPhone" parent="AppTheme">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/backgroundSign</item>
        <item name="android:textCursorDrawable">@color/backgroundSign</item>
    </style>

    <!-- TextView -->
    <style name="TextHeadRegister" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/head_register_size</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="fontFamily">@font/happy_monkey</item>
    </style>

    <style name="BirthdayTextViewDayMonthYear">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/day_text_view_size</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="birthdayTextViewError">
        <item name="android:textSize">@dimen/day_text_view_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:visibility">invisible</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>

    <!-- DatePicker -->
    <style name="birthdayRegisterDatePicker" parent="@android:style/Widget.Material.DatePicker">
        <item name="colorControlNormal">@color/hintSignEditText</item>
        <item name="android:textSize">@dimen/birthday_register_date_picker_text_size</item>
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
    </style>

    <!-- view -->
    <style name="ViewLineProgressSign">
        <item name="android:background">@color/colorPrimary</item>
    </style>

</resources>